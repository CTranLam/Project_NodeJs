mixin alert-success(time)
    - if(messages.success)
        .message.success
            div(
                class="alert alert-success"
                show-alert
                data-time = "3000"
            )
                = messages.success

mixin alert-error(time)
    - if(messages.error)
        .message.error
            div(
                class="alert alert-danger"
                show-alert
                data-time = "3000"
            )
                = messages.error