extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug

block main
    - if(messages.success)
        +alert-success(3000)

    h1 Danh sách sản phẩm
    .card.mb-3
        .card-header Bộ lọc và Tìm kiếm
        .card-body
            .row
                .col-6
                    //- Gọi mixin filter-status và truyền vào 2 tham số filterStatus và currentStatus
                    +filter-status(filterStatus, currentStatus) 
                .col-6
                    //- Gọi mixin search và truyền vào từ khóa tìm kiếm
                    +search(keyword)


    .card.mb-3
        .card-header Danh sách sản phẩm
            .card-body
                .row 
                    .col-8
                        //- Gọi mixin form-change-multi và truyền vào 2 tham số type và ids
                        +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
                    .col-4 
                        a(
                            href=`${prefixAdmin}/products/create`
                            class="btn btn-outline-success"
                        ) + Thêm sản phẩm mới
                    .card.mb-3
                        .card-header Sắp xếp
                        .card-body
                            .row
                            .col-4
                                +sort()
                                    
                table(
                    class = "table table-hover table-sm"
                    checkbox-multi
                )
                    thead
                        tr  
                            th 
                                input(type="checkbox" name="checkall" id="checkall")
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Giá
                            th Vị trí
                            th Trạng thái
                            th Hành động
                    tbody
                        each item, index in products
                            tr  
                                td 
                                    input(
                                        type="checkbox"
                                        name="id"
                                        value=item._id
                                        class="checkbox-item"
                                    )
                                td #{index + 1}
                                td
                                    img(src=item.thumbnail, alt= item.title, width="100px", height="auto")
                                td #{item.title}
                                td #{item.price}
                                td 
                                    input(
                                        type="number"
                                        value=item.position
                                        style="width: 60px;"
                                        min = "1"
                                        name="position"
                                    )
                                td  
                                    //- href ="javascript:;" để không chuyển trang khi click
                                    //- href = "#" nó sẽ chuyển trang lên đầu
                                    if item.status == 'active'
                                        a.badge.bg-success(href="javascript:;",
                                        button-change-status,
                                        data-status=item.status,
                                        data-id=item._id) Hoạt động
                                    else
                                        a.badge.bg-danger(href="javascript:;",
                                        button-change-status,
                                        data-status=item.status,
                                        data-id=item._id) Dừng hoạt động
                                td  
                                    a.btn.btn-secondary.btn-sm.me-1(
                                        href=`${prefixAdmin}/products/detail/${item.id}`
                                    ) Chi tiết
                                    a.btn.btn-warning.btn-sm.me-1(
                                        href=`${prefixAdmin}/products/edit/${item.id}`
                                    ) Sửa
                                    button.btn.btn-danger.btn-sm(
                                        data-id=item._id,
                                        button-delete
                                    ) Xóa
        //- Phân trang
        +pagination(pagination)

        //- Gửi qua form hoặc gửi qua API
        form(
            action="",
            method="POST"
            id = "form-change-status"
            data-path=`${prefixAdmin}/products/change-status`
        )

        form(
            action="",
            method="POST"
            id = "form-delete-item"
            data-path=`${prefixAdmin}/products/delete`
        )

        script(src="/admin/js/product.js")