extends ../../layouts/default.pug

block main
  if (product.title)
    h1(class="mb-4") #{product.title}

  if (product.price)
    div(class="mb-4") Giá: <b>#{product.price}$</b>

  if (product.discountPercentage)
    div(class="mb-4") Giảm giá: <b>#{product.discountPercentage}%</b>

  if (product.stock)
    div(class="mb-4") Còn lại: <b>#{product.stock}</b>

  if (product.thumbnail)
    div(class="mb-4")
      img(
        src=product.thumbnail
        style="width: 100px"
        class="img-thumbnail"
      )

  if (product.status)
    div(class="mb-4")
      span Trạng thái: 
      if (product.status === "active")
        span(class="badge text-bg-success") Hoạt động
      else
        span(class="badge text-bg-danger") Dừng hoạt động

  if (product.category)
    div(class="mb-4") Danh mục: <span class="badge rounded-pill bg-info text-dark">#{product.category}</span>

  if (product.position)
    div(class="mb-4") Vị trí: <b>#{product.position}</b>

  if (product.description)
    div(class="mb-4") 
      h5 Mô tả chi tiết:
      div(class="border p-3 bg-light") !{product.description}
  
  a(
    href=`${prefixAdmin}/products/edit/${product._id}`
    class="btn btn-warning"
  ) Chỉnh sửa
  
  script(src="/admin/js/product.js")