extends ../../layouts/default.pug

block main
  h1(class="mb-4") Danh sách tài khoản

  .card.mb-3
    .card-header Danh sách
    .card-body
      .row
        .col-8
        .col-4.text-right
          a(
            href=`${prefixAdmin}/accounts/create`
            class="btn btn-outline-success"
          ) + Thêm mới

      table(class="table table-hover table-sm")
        thead
          tr
            th STT
            th Avatar
            th Họ tên
            th Phân quyền
            th Email
            th Trạng thái
            th Hành động
        tbody
          if(records.length > 0)
            each item, index in records
              tr
                td #{index + 1}
                td
                  img(
                    src=item.avatar 
                    width="100px" 
                    height="auto"
                  )
                td #{item.fullname}
                td #{item.role.title}
                td #{item.email}
                td
                  if item.status == 'active'
                    a.badge.bg-success(href="javascript:;",
                    button-change-status,
                    data-status=item.status,
                    data-id=item._id) Hoạt động
                  else
                    a.badge.bg-danger(href="javascript:;",
                    button-change-status,
                    data-status=item.status,
                    data-id=item._id) Dừng hoạt động

                td
                  //- Nút Chi tiết
                  a(
                    href=`${prefixAdmin}/accounts/detail/${item.id}`
                    class="btn btn-secondary btn-sm"
                  ) Chi tiết
                  
                  //- Nút Sửa
                  a(
                    href=`${prefixAdmin}/accounts/edit/${item.id}`
                    class="btn btn-warning btn-sm ml-1"
                  ) Sửa
                  
                  //- Nút Xóa
                  button(
                    class="btn btn-danger btn-sm ml-1"
                    button-delete
                    data-id=item.id
                  ) Xóa
          else
            tr
              td(colspan="7" class="text-center") Chưa có tài khoản nào được tạo.