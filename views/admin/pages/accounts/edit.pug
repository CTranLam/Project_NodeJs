extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  h1(class="mb-4") Cập nhật tài khoản

  +alert-error(5000)
  +alert-success(5000)

  if(roles)
    form(
      action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH`
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="mb-3")
        label(for="fullname" class="form-label") Họ tên *
        input(
          type="text" 
          class="form-control" 
          id="fullname" 
          name="fullname" 
          value=data.fullname
          required
        )
      
      div(class="mb-3")
        label(for="email" class="form-label") Email *
        input(
          type="email" 
          class="form-control" 
          id="email" 
          name="email" 
          value=data.email
          required
        )
      
      div(class="mb-3")
        label(for="password" class="form-label") Mật khẩu
        input(
          type="password" 
          class="form-control" 
          id="password" 
          name="password"
          placeholder="Nhập mật khẩu mới nếu muốn thay đổi"
        )

      div(class="mb-3")
        label(for="phone" class="form-label") Số điện thoại
        input(
          type="text" 
          class="form-control" 
          id="phone" 
          name="phone"
          value=data.phone
        )

      div(class="mb-3" upload-image)
        label(for="avatar" class="form-label") Ảnh
        input(
          type="file"
          class="form-control"
          id="avatar"
          name="avatar"
          accept="image/*"
          upload-image-input
        )
        img(
          src=data.avatar
          alt="Preview Image"
          class="img-thumbnail mt-2"
          style="max-width: 200px;"
          upload-image-preview
        )

      div(class="mb-3")
        label(for="role_id" class="form-label") Nhóm quyền
        select(name="role_id" id="role_id" class="form-select")
          option(disabled) -- Chọn --
          each item in roles
            option(
              value=item.id
              selected=(item.id == data.role_id ? true : false)
            ) #{item.title}
      
      div(class="mb-3")
        div(class="form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked=(data.status === "active" ? true : false)
          )
          label(for="statusActive" class="form-check-label") Hoạt động

        div(class="form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusInActive"
            name="status"
            value="inactive"
            checked=(data.status === "inactive" ? true : false)
          )
          label(for="statusInActive" class="form-check-label") Dừng hoạt động

      div(class="mb-3")
        button(type="submit" class="btn btn-primary") Cập nhật
  else
    p(class="alert alert-warning") Vui lòng tạo nhóm quyền trước khi cập nhật tài khoản.